.main {
  width: 100%;
  background-color: #FAFAFA;
}
.main .img {
  width: 100%;
  height: 450rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #bfc;
}
.main .text {
  width: 94%;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  height: 250rpx;
  align-items: center;
  justify-content: space-evenly;
}
.main .text .title {
  font-size: 18px;
  font-weight: 600;
}
.main .text .ttext {
  font-size: 12px;
  text-align: center;
  color: #666;
}
.main .info {
  width: 90%;
  height: 500rpx;
  background-color: #fff;
  margin: 0 auto;
  padding: 50rpx;
  box-sizing: border-box;
}
.main .info .info-row {
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 13px;
  justify-content: space-between;
}
.main .info .info-row .name {
  color: #666;
}

